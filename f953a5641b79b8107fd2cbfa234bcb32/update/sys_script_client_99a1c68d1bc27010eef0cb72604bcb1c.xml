        <applies_extended>false</applies_extended>
        <condition/>
        <description>Reset When needed to blank if state is changed to 'Cancelled'.&#13;
NOTE:  CANNOT CLEAR THE WHEN NEEDED VALUE BECAUSE IT IS A REQUIRED FIELD FOR MANY REQUEST TYPES.</description>
        <field>state</field>
        <global>true</global>
        <isolate_script>true</isolate_script>
        <messages/>
        <name>Clear When Needed When Cancelled</name>
        <order/>
        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading, isTemplate) {
    // identifies whether the change occurs as part of a form load or not.
    if (isLoading || newValue === '') {
        return;
    }
    // Clear the When needed date if the State is 'Cancelled'
	//
	if (newValue == '10') {
		g_form.clearValue('u_when_needed');
    }

}]]></script>
